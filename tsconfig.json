{
  "compilerOptions": {
    "module": "commonjs",
    "target": "ES6",
    "declaration": true,
    "outDir": "./lib",
    "strict": true,
    "noImplicitAny": false,
    "esModuleInterop": true,
    "preserveConstEnums": true,
    "inlineSourceMap": true,
    "resolveJsonModule": true,
    "typeRoots": ["node_modules/@types"],
    "moduleResolution": "node",
    "baseUrl": "./",
    "paths": {
      "*": ["node_modules/@types/*", "*"]
    }
  },
  "include": ["src/**/*"],
  "exclude": ["node_modules"],
  "typedocOptions": {
    "inputFiles": "src/index.ts",
    "mode": "library",
    "out": "docs",
    "name": "OEX JS SDK"
  }
}